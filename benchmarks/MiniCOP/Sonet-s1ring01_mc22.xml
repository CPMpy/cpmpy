<instance format="XCSP3" type="COP">
  <variables>
    <array id="x" note="x[i][j] is 1 if the ith ring contains the jth node" size="[4][7]"> 0 1 </array>
  </variables>
  <constraints>
    <group>
      <extension>
        <list> %... </list>
        <supports> (1,1,*,*,*,*,*,*)(*,*,1,1,*,*,*,*)(*,*,*,*,1,1,*,*)(*,*,*,*,*,*,1,1) </supports>
      </extension>
      <args> x[][1..2] </args>
      <args> x[0][1] x[0][6] x[1][1] x[1][6] x[2][1] x[2][6] x[3][1] x[3][6] </args>
      <args> x[][2..3] </args>
      <args> x[0][2] x[0][5] x[1][2] x[1][5] x[2][2] x[2][5] x[3][2] x[3][5] </args>
      <args> x[][3..4] </args>
      <args> x[0][3] x[0][6] x[1][3] x[1][6] x[2][3] x[2][6] x[3][3] x[3][6] </args>
      <args> x[0][4] x[0][6] x[1][4] x[1][6] x[2][4] x[2][6] x[3][4] x[3][6] </args>
      <args> x[][5..6] </args>
    </group>
    <group note="respecting the capacity of rings">
      <sum>
        <list> %... </list>
        <condition> (le,4) </condition>
      </sum>
      <args> x[0][] </args>
      <args> x[1][] </args>
      <args> x[2][] </args>
      <args> x[3][] </args>
    </group>
  </constraints>
  <objectives>
    <minimize note="minimizing the number of nodes installed on rings" type="sum"> x[][] </minimize>
  </objectives>
</instance>
